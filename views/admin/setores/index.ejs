<%- include ('../../partials/configure_header.ejs') %> 
<%- include ('../../partials/header_adm.ejs') %>

<body>
  <br />
  <div class="container">
    <hr />
    <h5 class="text-center">SETORES CADASTRADOS</h5>
    <hr />
    <br>
    <a class="btn btn-block btn-info"  href="/admin/setores/novo">NOVO</a>
    <br />
    <table class="table text-center rtable mt-3">
      <thead>
        <tr class="ajuste-tr">
          <th>DESCRIÇÃO</th>
          <th>AÇÕES</th>
        </tr>
      </thead>
      <tbody>
       
        <% setores.forEach(setor => { %>
        <tr class="ajuste-tr">
          <td class="align-middle" data-title="DESCRIÇÃO:"><%= setor.descricao %> </td>
          <td class="align-middle">
            <a
              href="/admin/setores/edicao/<%= setor.id %>"
              class="btn btn-warning"
              ><i class="bi bi-brush"></i>
            </a>
            <form method="POST" action="/setores/deletar" style="display: inline" onsubmit="confirmardelete(event,this)">
              <input type="hidden" name="id" value="<%= setor.id %>">
              <button class="btn btn-danger ajuste_botao_delete">
                <i class="bi bi-trash3"></i>
              </button>
            </form>
            <a
            href="/admin/setores/ver/<%= setor.id %>"
            class="btn btn-dark margin-ver"
            ><i class="bi bi-eye"></i>
          </a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
<%- include ('../../partials/footer.ejs') %>
<%- include ('../../partials/configure_footer.ejs') %>

<script>
  function confirmardelete(event, form) {
    event.preventDefault()
    var decisao = confirm('Deletar permanentemente esse setor?')
    if (decisao) {
      form.submit()
    }
  }
</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">